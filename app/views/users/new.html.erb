<div class = "sign_up_background"></div> 

<div class = "sign_up">
<% provide(:title, "Sign up")%>
<h1>Sign up</h1>
  <div class = "span6 offset3">
  	
    <%= form_for(@user) do |f|%>
        <%= render 'error/error_messages', object: @user%>
        <%= f.label :name%>
        <%= f.text_field :name%>

        <%= f.label :email%>
        <%= f.text_field :email%>

        <%= f.label :password%>
        <%= f.password_field :password%>

        <%= f.label :password_confirmation, "Confirmation"%>
        <%= f.password_field :password_confirmation%>

        <div class = "submit"><%= f.submit "Create my account", class: "btn btn-primary sign_up_button"%></div>

    <% end %>
  </div>
</div>
