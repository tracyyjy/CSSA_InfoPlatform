<div class = "common_background"></div>
<% provide(:title, "All Groups")%>
<h3>All Groups</h3>
<ul class="groups common_area">
	<% cache(@groups) do %>
	<h5>Default Group:</h5>
	<% @groups.each do |group|%>
	<li class="decorate_p">
		<% cache(group) do %>
		<%= group.group_name%>
		<%= group.group_description%>
		<% end %>
		<% if group.id > 4 && current_user.admin?%>
		<!-- only none default group can be delete by admin -->
		<%= link_to "delete", group, method: :delete, confirm: "You Sure to Delete" %>
		<% end %>
	</li>
	<%end%>
	<%end%>
</ul>